@model ProjectFinalEMDAAdvanced.Models.Staff

@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <div class="jumbotron">
        <h2>Edit Staff Member</h2>
        <div>
            ( <a asp-action="Index"><span class="glyphicon glyphicon-hand-left"></span> Back to List</a> )
        </div>
    </div>

    <div class="row">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group col-sm-6">
                <label asp-for="FirstName" class="control-label">First Name</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div><div class="clearfix"></div>
            <div class="form-group col-sm-6">
                <label asp-for="LastName" class="control-label">Last Name</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div><div class="clearfix"></div>
                  <div class="form-group col-sm-6">

                      <input id="InToggle" asp-for="In" class="form-control" type="checkbox" data-toggle="toggle" data-on="In" data-off="Out" data-style="ios" /> &nbsp;&nbsp;NB: If you sign out here the reason for signing out will display as "n/a"
                  </div><div class="clearfix"></div>
            <div class="form-group col-sm-3">
                <input type="submit" value="Save" class="btn btn-primary" style="width: 50%;" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
